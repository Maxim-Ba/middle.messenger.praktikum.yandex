    {{{topMenuButtons}}}
    <section class="chats__body">
      <div class="chats__messages">
        <menu class="file-menu display-none">
          <div class="chats__menu-content">
            {{#each bottomMenuButtons}}
              <div class="chats__menue-item" id={{actionId}}>
                <img
                  src={{iconSvg}}
                  alt="Создать чат"
                  class="chats__menue-item-img"
                />
                <p class="chats__menue-item-action">{{actionTitle}}</p>
              </div>
            {{/each}}
          </div>
        </menu>
      </div>
      <form class="chats__footer" id="chats__send-msg-form">
        <img
          class="chats__file-menu"
          src={{svgDefault.svgSendFile}}
          alt="Прикрепить
    файл"
        />
        <input
          name="message"
          class="chats__input"
          type="text"
          placeholder="Сообщение"
        />
        <button class="chats__send-btn">
          <img
            class="chats__send"
            src={{svgDefault.svgArrowRight}}
            alt="Прикрепить файл"
          />
        </button>
      </form>
    </section>
    <div class="chats__no-chat-selection display-none">
      <p class="chats__no-chat-selection-p">
        Выберите чат чтобы отправить сообщение
      </p>
    </div>
