<div class="registration__wrapper">
  <main class="registration">
    <div class="title-wrapper">
      <h1 class="login-registration__title">Регистрация</h1>
    </div>
    <form class="form" id="login-form">
      <label class="form-label" for="email">
        Почта
      </label>
      <input name="email" class="input" type="email" placeholder="Почта" />
      <label class="form-label" for="login">
        Логин
      </label>
      <input name="login" class="input" type="text" placeholder="Логин" />
      <label class="form-label" for="name">
        Имя
      </label>
      <input name="name" class="input" type="text" placeholder="Имя" />
      <label class="form-label" for="second-name">
        Фамилия
      </label>
      <input
        name="second-name"
        class="input"
        type="text"
        placeholder="Фамилия"
      />
      <label class="form-label" for="tel">
        Телефон
      </label>
      <input name="tel" class="input" type="tel" placeholder="Телефон" />
      <label class="form-label" for="password">
        Пароль
      </label>
      <input
        name="password"
        class="input input_last"
        type="password"
        placeholder="Пароль"
      />
      <div class="form-warning form-warning_pt-1rem" id="login__form-warning">
        <p class="form-warning-text">Пароли не совпадают</p>
      </div>
    </form>
    <div class="registration__button-wrapper">
      <button class="button button_grey button_auth button_b-r-8px"><a
          href="../chats/index.html"
          class="button"
        >Войти</a>
      </button>
      <button
        class="button button_blue button_auth button_b-r-8px"
      >Регистрация</button>
    </div>
  </main>
</div>